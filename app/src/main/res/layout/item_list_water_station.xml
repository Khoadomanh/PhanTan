<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@drawable/bg_white_corners"
    android:layout_margin="5dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/iv_water_station"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/icon_water1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:tint="#00b7ff"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/iv_water_station"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_name_water_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="D35_TN01: Trạm nước 001"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_middle" />
        <TextView
            android:id="@+id/tv_address_water_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:ellipsize="end"
            android:layout_below="@id/tv_name_water_station"
            android:maxLines="1"
            android:text="D6 KTX Bách Khoa Hà Nội"
            android:textColor="@color/text_black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_water_station">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ic_location"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_list_tree" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ic_location"
                    android:layout_alignTop="@id/ic_location"
                    android:layout_toEndOf="@id/ic_location"
                    android:gravity="center_vertical"
                    android:text="450 m"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/tv_title_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_distance"
                    android:textSize="13sp"
                    android:text="Trạng thái:"
                    android:textColor="@color/text_black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/ic_water"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                     />

                <TextView
                    android:id="@+id/tv_water_current_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ic_water"
                    android:layout_alignTop="@id/ic_water"
                    android:layout_toEndOf="@id/ic_water"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/tv_status_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_water_current_list"
                    android:maxLines="2"
                    android:text="Còn nước"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>