<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:elevation="2dp"
    android:padding="2dp"
    android:background="@drawable/bg_white_corners">
    <TextView
        android:id="@+id/date_water"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="20/03"
        android:textColor="@color/white"
        android:background="@drawable/bg_green_corners"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/date_water"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/maCay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="D35_XC1110"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/tenCay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cây xà xừ "
                android:textSize="18sp"
                android:textColor="#d8202a"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Lượng nước tưới"/>
            <TextView
                android:id="@+id/luongNuocTuoi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="500ml "
                android:textSize="18sp"
                android:gravity="center_vertical|left"
                android:textColor="#d8202a"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Thời gian"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/thoiGianTuoi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="10h : 22p"
                android:textSize="18sp"
                android:gravity="center_vertical|left"
                android:textColor="#d8202a"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>